const Koa = require("koa");
<% if (router) { %>
	const Router = require("koa-router");
<% } %><% if (static) { %>
	const Router = require("koa-static");
<% } %>


const app = new Koa();

<% if (router) { %>
const router = new Router();
router.get("/", (ctx) => {
  ctx.body = "hello koa-setup-heihei";
});
app.use(router.routes());
<% } %>

app.listen(<%= port %>, () => {
  console.log("Open server localhost: <%= port %>");
});